@using BookNest.Models.Entities
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Memeber Dashboard";
}

<div>
    <h1>Welcome back @UserManager.GetUserName(User)!</h1>
</div>

@model List<Checkout>

<h2>Overdue Checkouts</h2>

<br>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>book id</th>
            <th>member id</th>
            <th>checkout date</th>
            <th>due date</th>
            <th>returned</th>
            <th>overdue</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var checkout in Model)
            {
                <tr>
                    <td>@checkout.Id</td>
                    <td>@checkout.BookId</td>
                    <td>@checkout.MemberId</td>
                    <td>@checkout.CheckoutDate</td>
                    <td>@checkout.DueDate</td>
                    <td>@checkout.IsReturned</td>
                    <td>@checkout.IsOverdue</td>
                </tr>
            }
        }
    </tbody>
</table>