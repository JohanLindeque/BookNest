@using BookNest.Constants
@using BookNest.Models.Entities
@{

}

@model List<Checkout>

<h1>All Checkouts</h1>

<br>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>book id</th>
            <th>member id</th>
            <th>checkout date</th>
            <th>due date</th>
            <th>returned</th>
            <th>overdue</th>
            @* todo view *@

            @if (User.IsInRole(Roles.Librarian))
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var checkout in Model)
            {
                <tr>
                    <td>@checkout.Id</td>
                    <td>@checkout.BookId</td>
                    <td>@checkout.MemberId</td>
                    <td>@checkout.CheckoutDate</td>
                    <td>@checkout.DueDate</td>
                    <td>@checkout.IsReturned</td>
                    <td>@checkout.IsOverdue</td>

                    @if (User.IsInRole(Roles.Librarian))
                    {
                        <a asp-action="Return" asp-route-id="@checkout.Id">Return</a>
                    }

                </tr>
            }
        }
    </tbody>
</table>