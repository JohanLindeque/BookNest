@using BookNest.Constants
@using BookNest.ViewModels

@{
    ViewData["Title"] = "List of Books";
}

@model List<BookListItemViewModel>

<div class="text-center">
    <h1 class="display-4">Books</h1>
</div>

<hr />
@await Html.PartialAsync("_AlertsPartial")
<br>

@if (User.IsInRole(Roles.Librarian))
{
    <a asp-controller="Books" asp-action="Create" class="btn btn-primary mb-3">
        Add
    </a>
}

<table id="booksTable" class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Publication Year</th>
            <th>Author</th>
            <th>Available</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.ISBN</td>
                <td>@book.PublicationYear</td>
                <td>@book.AuthorName</td>
                <td>
                    @if (book.IsAvailable)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">No</span>
                    }
                </td>
                <td>
                    @if (User.IsInRole(Roles.Librarian))
                    {
                        <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-outline-info btn-sm me-1">
                            Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-outline-danger btn-sm">
                            Delete
                        </a>
                    }

                    @if (User.IsInRole(Roles.Member) && book.IsAvailable)
                    {
                        <a asp-controller="Checkouts" asp-action="Checkout" asp-route-id="@book.Id"
                            class="btn btn-outline-success btn-sm">
                            Checkout
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#booksTable').DataTable({
                pageLength: 10,
                ordering: true,
                searching: true,
                info: true,

                columnDefs: [
                    { orderable: false, targets: -1 } // Actions
                ],

                dom:
                    "<'row mb-3'" +
                    "<'col-sm-12 col-md-6'l>" +
                    "<'col-sm-12 col-md-6 text-end'f>" +
                    ">" +
                    "<'row'" +
                    "<'col-sm-12'tr>" +
                    ">" +
                    "<'row mt-3'" +
                    "<'col-sm-12 col-md-5'i>" +
                    "<'col-sm-12 col-md-7 text-end'p>" +
                    ">"
            });
        });
    </script>
}